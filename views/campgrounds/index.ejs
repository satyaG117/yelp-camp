<% layout('layouts/boilerplate') %> 
<link rel="stylesheet" href="/styles/mapPopup.css">


<div id="map" style="width: 100%; height:400px;"></div>

<h1>All campgrounds</h1>
<div>
    <a href="/campgrounds/new">Create campground</a>
</div>

    <% for(let cg of campgrounds){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(cg.images.length) {%> 
                        <img src="<%= cg.images[0].url %>" alt="" class="img-fluid">
                        <% }else { %>
                            <img src="https://res.cloudinary.com/cloud7xsg/image/upload/v1662628063/YelpCamp/no_image_found_nmreil.jpg" alt="" class="img-fluid">
                    <% } %>  
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= cg.title %> </h5>
                        <p class="card-text"><%= cg.description %> </p>
                        <p class="card-text">
                            <small class="text-muted"><%= cg.location %> </small>
                        </p>
                        <a href="/campgrounds/<%= cg._id %>" class="btn btn-primary">Show more</a>
                        <p></p>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

    <script>
        const mapToken = "<%- process.env.MAPBOX_TOKEN %>";
        const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
    </script>

    <script src="/scripts/clusterMap.js"></script>